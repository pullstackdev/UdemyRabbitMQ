@model List<UserFile>

@section Scripts{ @*layouttaki section yazan yerde görünmesi için*@
    <script>
        $(document).ready(function () {
            var hasStartCreatingExcel = '@TempData["StartCreatingExcel"]'
            if (hasStartCreatingExcel{
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Excel oluşturma başladı',
                    showConfirmButton: false,
                    //confirmButtonText = "Dosyalarım",
                    //timer: 1500
                })
            }
        })
    </script>
}

<h1>Files</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>CreatedDate</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.GetCreatedDate</td>
            <td>@item.FileStatus</td>
            <td>
                <a href="~/files/@item.FilePath" class="btn btn-primary @(item.FileStatus==FileStatus.Creating?"disabled":"")">Download</a>
            </td>
        </tr>
    }
</table>